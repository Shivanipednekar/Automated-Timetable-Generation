    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         

try
{
    Class.forName("oracle.jdbc.driver.OracleDriver");
    
    Connection con=DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:XE","TIMES","654321");
    
    Statement stmt=con.createStatement();
    
    String F_ID=t1.getText();
   String F_NAME=t2.getText();
      String EMAIL=t3.getText();
         String CONTACT=t4.getText();
        
          String QUALIFICATION=t5.getSelectedItem().toString();
               String SPECIALISATION=t6.getText();
                 
          String DEPARTMENT=t7.getSelectedItem().toString();
                    // String PASSWORD=t8.getText();
   int lecture=Integer.parseInt(t9.getText());
              int prac=Integer.parseInt(t10.getText());
         if(F_ID.contains(""))
         {
JOptionPane.showMessageDialog(null,"Plesase fill the boxes");
t1.setText(null);
t2.setText(null);
t3.setText(null);
t4.setText(null);

t6.setText(null);
//t8.setText(null);
}
         else{
    
    ResultSet rs=stmt.executeQuery("update TIMES.FACULTY_DETAIL set NAME ='"+F_NAME+"',EMAIL='"+EMAIL+"',CONTACT='"+CONTACT+"',QUALIFICATION='"+QUALIFICATION+"',SPECIALISATION='"+SPECIALISATION+"',DEPARTMENT='"+DEPARTMENT+"',LECTURE="+lecture+",PRACTICAL="+prac+" where ID ='"+F_ID+"'");
  
    
JOptionPane.showMessageDialog(null,"successfully updated","Successs",JOptionPane.INFORMATION_MESSAGE);
         }

      con.close();
      

}
        
 catch(Exception e)
 {
     System.out.println(e);
     
     JOptionPane.showMessageDialog(null,"UPDATE FAILED","ERRROR OCCURED",JOptionPane.ERROR_MESSAGE);
     
     t1.setText(null);
    t2.setText(null);
             
     t3.setText(null);
     t4.setText(null);
     t6.setText(null);
           
     //t8.setText(null);
           
    
 }               // TODO add your handling code here:
    }                                        

