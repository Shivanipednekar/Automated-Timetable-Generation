    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
try
        {
Class.forName("oracle.jdbc.driver.OracleDriver");

            //create connection object
            Connection con=DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:XE ","TIMES","654321");
            //create statement
            Statement stmt=con.createStatement();
                       

            String fid= t1.getText();
        String fname = t2.getText();
        String email=t3.getText();
         String contact=t4.getText();
         String qualification=t5.getSelectedItem().toString();
           String specialisation=t6.getText();
            String dpt=t7.getSelectedItem().toString();
            // String password=t8.getText();
              int lecture=Integer.parseInt(t9.getText());
              int prac=Integer.parseInt(t10.getText());
               int c=contact.length();
              
             
              ResultSet r=stmt.executeQuery("SELECT ID FROM TIMES.FACULTY_DETAIL WHERE ID='"+fid+"'");
              
             
             if(r.next()){
JOptionPane.showMessageDialog(null,"ID Already Exists");
t1.setText(null);
t2.setText(null);
t3.setText(null);
t4.setText(null);

t6.setText(null);
//t8.setText(null);
}
              
              else if(c!=10)
{
             JOptionPane.showMessageDialog(null,"INVALID CONTACT","ERROR",JOptionPane.ERROR_MESSAGE);

              }
              else{

ResultSet rs=stmt.executeQuery("INSERT INTO TIMES.FACULTY_DETAIL VALUES('"+fid+"','"+fname+"','"+email+"','"+contact+"','"+qualification+"','"+specialisation+"','"+dpt+"',"+lecture+","+prac+")");
JOptionPane.showMessageDialog(null,"successfully inserted","Successs",JOptionPane.INFORMATION_MESSAGE);
 
t1.setText(null);
t2.setText(null);
t3.setText(null);
t4.setText(null);



t6.setText(null);

         

        } }

catch(Exception e)
        {
System.out.println(e);
JOptionPane.showMessageDialog(null,"ERROR","ERROR",JOptionPane.ERROR_MESSAGE);
t1.setText(null);
t2.setText(null);
t3.setText(null);
t4.setText(null);

t6.setText(null);
//t8.setText(null);


        }        // TODO add your handling code here:
    }                                        

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
try
        {
Class.forName("oracle.jdbc.driver.OracleDriver");

            //create connection object
            Connection con=DriverManager.getConnection("jdbc:oracle:thin:@localhost:1521:XE ","TIMES","654321");
            //create statement
            Statement stmt=con.createStatement();
            
            String op=C1.getSelectedItem().toString();
            String fid= F1.getText();
            
           if (op=="DELETE"){
ResultSet rs=stmt.executeQuery("DELETE FROM TIMES.MAPPING WHERE ID='"+fid+"'");
JOptionPane.showMessageDialog(null,"successfully DELETED","Successs",JOptionPane.INFORMATION_MESSAGE);
 ResultSet s=stmt.executeQuery("DELETE FROM TIMES.FACULTY_DETAIL WHERE ID='"+fid+"'");
        }
           else if (op=="SEARCH")
           {     
               ResultSet r=stmt.executeQuery("SELECT ID FROM TIMES.FACULTY_DETAIL WHERE ID='"+fid+"'");
              
             
             if(r.next()){
               
               ResultSet rs=stmt.executeQuery("select NAME,EMAIL,CONTACT,QUALIFICATION,SPECIALISATION,DEPARTMENT,LECTURE,PRACTICAL FROM TIMES.FACULTY_DETAIL WHERE ID='"+fid+"'");
                        do{
                            tb1.setModel(DbUtils.resultSetToTableModel(rs));
                            JOptionPane.showMessageDialog(null,"data displayed","SUCCESSFULL", JOptionPane.INFORMATION_MESSAGE);

                                }while(rs.next());
           }
         else
             {
                 JOptionPane.showMessageDialog(null,"USER DOES NOT EXIST","FALIURE", JOptionPane.ERROR_MESSAGE);

             }
        }
        }

catch(Exception e)
        {
System.out.println(e);
JOptionPane.showMessageDialog(null,"ERROR","ERROR",JOptionPane.ERROR_MESSAGE);
t1.setText(null);
t2.setText(null);
t3.setText(null);
t4.setText(null);

t6.setText(null);
//t8.setText(null);


        }             // TODO add your handling code here:
    }                                        

